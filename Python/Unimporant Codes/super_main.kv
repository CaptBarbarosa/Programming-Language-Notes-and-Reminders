# main.kv
Screen:

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Super Admin Panel'
            elevation: 10
            left_action_items: [['menu', lambda x: app.open_menu(x)]]
            right_action_items: [['dots-vertical', lambda x: None]]

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)

            MDLabel:
                text: 'Super Admin Panel'
                halign: 'center'
                font_style: 'H4'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(20)
                halign: 'center'

                MDFlatButton:
                    text: 'Analytics'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
                    on_release: app.navigate_to('analytics')

                MDFlatButton:
                    text: 'Reports'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
                    on_release: app.navigate_to('reports')

                MDFlatButton:
                    text: 'Settings'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
                    on_release: app.navigate_to('settings')

            ScrollView:
                MDDataTable:
                    id: admin_table
                    size_hint: (1, None)
                    height: self.minimum_height
                    use_pagination: True
                    column_data:
                        [("ID", dp(30)),
                         ("Name", dp(30)),
                         ("Email", dp(60))]
                    row_data: []

            MDRaisedButton:
                text: 'Delete Admin'
                md_bg_color: app.theme_cls.error_color
                text_color: 'white'
                pos_hint: {'center_x': 0.5}
                on_release: app.delete_admin()

            MDTextField:
                id: name_input
                hint_text: 'Name'
                mode: 'rectangle'

            MDTextField:
                id: email_input
                hint_text: 'Email'
                mode: 'rectangle'

            MDRaisedButton:
                text: 'Add Admin'
                md_bg_color: app.theme_cls.primary_color
                text_color: 'white'
                pos_hint: {'center_x': 0.5}
                on_release: app.add_admin()
